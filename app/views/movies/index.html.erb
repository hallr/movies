<h1><a href="<%= root_path %>">Welcome to RetFlix! See our collection of movies below.</a></h1>

<a href="<%=new_movie_path %>">+ Add a movie</a>
<br>
<br>

<%= form_tag "/", :method => :get do %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Search" %>
<% end %>

<div class="container">
    <ul class="thumbnails">
        <% @movies.each do |movie| %>
        <li class="span4">
            <div class="movie_thumbnail">
                <h2><a href="<%= movie_path(movie) %>"><%= movie.title %></a></h2>
                <p>
                    <%= movie.description %>
                </p>
                <p>
                    <%= movie.year_released %>
                </p>
                <a href="<%= edit_movie_path(movie) %>"><button class="btn btn-small" type="button">Edit</button></a>
            </div>
        </li>
        <% end %>
    </ul>
</div>